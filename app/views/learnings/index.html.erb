<div class="container">

<h1>Learnings#index</h1>

<%= link_to 'new item', new_learning_path, class: 'btn btn-primary' %>

<hr style="margin:0.5rem;">
  <%= paginate @learnings %>
  <%= page_entries_info @learnings %>
<hr style="margin:0.5rem;">

</div>

  <div class="container-fluid">

<div class="row">

<div class="col-md-9">


    <!-- 親要素cardクラスを定義する -->
  <div class="card mb-3">
    <% @learnings.each do |l| %>

<!-- カード見出し：card-title -->

    <div class="card-header h4">
      <%= l.title %>
    </div>


      <!-- カード本文：card-body -->
      <div class="card-body">

        <div class="d-flex justify-content-center">
          <p class="card-text"><%= image_tag(l.image.url) if l.image && l.image.url %></p>
        </div>

        <div class="d-flex justify-content-center">
          <p class="card-text"><%= link_to 'URL', l.url_info, target: :_blank  unless l.url_info.blank? %></p>
        </div>


        <div class="accordion" id="accordion" role="tablist" aria-multiselectable="true">

          <div role="tab" id="list1">

            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#list1items" aria-expanded="true" aria-controls="list1items">本文を読む</button>


            <div id="list1items" class="collapse" role="tabpanel" aria-labelledby="list1" data-parent="#accordion">
                <p class="card-text"><%= l.main_content %></p>
                <p class="card-text"><%= l.sub_content %></p>
            </div>
          </div>

          <!-- アコーディオン閉じる? -->
        </div>

        <div class="card-text d-flex flex-wrap">
            <% l.labelings.each do |lbl| %>
            <div class="flex-wrap">
              <%= lbl.label.label_name %>
            </div>
            <% end %>
        </div>

        <div class="d-flex">
          <div class="card-text mr-auto">チェック回数：<%= l.checked_times %></div>
          <div><%= simple_date(l.created_on) %>作成</div>
        </div>

        <!-- カードボディ閉じる -->
      </div>

        <div class="card-footer bg-transparent">
          <div class="btn-group d-flex justify-content-around" role="group">
              <%= link_to('Delete', learning_path(l.id),
                  { method: :delete,
                    data: { confirm: "項目#{l.title}を削除します"},
                    class: "btn btn-info"
                  }
                )
              %>
              <%= link_to("Relearn", relearn_learning_path(l.id),
                  { method: :relearn,
                    data: { confirm: "項目#{l.title}を再学習します"},
                    class: "btn btn-info"
                  }
                )
              %>
              <%= link_to "Edit", edit_learning_path(l.id), class: "btn btn-info" %>

              <%= link_to "Check", check_item_learning_path(l.id),
                  { method: :check_item,
                    class: "btn btn-success"
                  }
              %>
              <!-- ボタングループ閉じる -->
          </div>
          <!-- カードフッター閉じる -->
        </div>

    <% end %>

  <!-- カードクラス閉じる -->
</div>



</div>

</div>



<!-- カード部分のコンテナを閉じる -->
</div>
