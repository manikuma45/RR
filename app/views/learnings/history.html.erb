<div class="container">

<h1>Learnings#history</h1>

<% "nav.justify-content-end" %>

<%= link_to 'new item', new_learning_path, class: 'btn btn-primary' %>

<%= search_form_for @q, :url => history_learnings_path do |f| %>
  <%= f.label :"" %>
  <%= f.search_field :title_or_main_content_or_sub_content_or_labels_label_name_cont %>
  <%= f.submit %>
<% end %>

<hr style="margin:0.5rem;">
  <%= paginate @learnings %>
  <%= page_entries_info @learnings %>
<hr style="margin:0.5rem;">




