<%= form_with(model: @learning, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :main_content %>
    <%= form.text_field :main_content %>
  </div>

  <div class="field">
    <%= form.label :url_info %>
    <%= form.text_field :url_info %>
  </div>

  <div class="field">
    <%= form.label :sub_content %>
    <%= form.text_field :sub_content %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
